<idea-plugin>
    <id>org.intellij.examples.pycharm.plugin</id>
    <name>PyCharmPlugin</name>
    <version>1.0</version>
    <vendor url="https://jetbrains.com">JetBrains</vendor>
    <description>Subplugin with an action and a dialog for PyCharm</description>
    <change-notes/>
    <depends>com.intellij.modules.pycharm</depends>
    <actions>
        <action class="org.intellij.examples.pycharm.plugin.HelloAction" id="SayHelloToPyCharm" text="Say Hello to PyCharm">
            <add-to-group group-id="ToolsMenu"/>
            <add-to-group group-id="WelcomeScreen.QuickStart"/>
        </action>
    </actions>
</idea-plugin>
