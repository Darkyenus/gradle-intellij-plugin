<idea-plugin>
    <id>org.intellij.examples.clion.plugin</id>
    <name>ClionPlugin</name>
    <version>1.0</version>
    <vendor url="https://jetbrains.com">JetBrains</vendor>
    <description>Subplugin with an action and a dialog for CLion</description>
    <change-notes/>
    <depends>com.intellij.modules.clion</depends>
    <actions>
        <action class="org.intellij.examples.clion.plugin.HelloAction" id="SayHelloToClion" text="Say Hello to CLion">
            <add-to-group group-id="ToolsMenu"/>
            <add-to-group group-id="WelcomeScreen.QuickStart"/>
        </action>
    </actions>
</idea-plugin>
